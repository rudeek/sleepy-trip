<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения для геолокации -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!-- Фоновая геолокация для Android 10+ -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <!-- Разрешение на foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION"/>

    <!-- Разрешение на показ поверх других окон -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <!-- Разрешение на вибрацию -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- Для Full Screen Intent (будильник) -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT"/>

    <!-- Разрешение на отключение оптимизации батареи (для стабильной работы) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>

    <!-- WakeLock и уведомления -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logologo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logologo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SleepyTrip"
        tools:targetApi="31">

        <!-- API ключ для Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/my_maps_api_key" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AlarmActivity с правильными флагами -->
        <activity
            android:name=".AlarmActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:exported="false"
            android:taskAffinity=""
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <!-- LocationService - ТОЛЬКО location тип! -->
        <service
            android:name=".LocationService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false"
            android:foregroundServiceType="location"/>

    </application>

</manifest>