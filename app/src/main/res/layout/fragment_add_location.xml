<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".AddLocationFragment">

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:queryHint="@string/add_location_search_hint"
        android:iconifiedByDefault="false"
        android:background="@drawable/rounded_search_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:elevation="10dp" />

    <!-- Google Maps Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_view"
        android:layout_above="@id/radius_container"/>

    <!-- Контейнер для настройки радиуса -->
    <LinearLayout
        android:id="@+id/radius_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_container"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Заголовок и значение радиуса -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_location_radius"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

            <TextView
                android:id="@+id/tv_radius_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 м"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

        </LinearLayout>

        <!-- Слайдер для выбора радиуса -->
        <com.google.android.material.slider.Slider
            android:id="@+id/slider_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:valueFrom="100"
            android:valueTo="2000"
            android:stepSize="50"
            android:value="500"
            app:thumbColor="@color/lavender"
            app:trackColorActive="@color/lavender"
            app:trackColorInactive="#E0E0E0"/>

        <!-- Подсказка -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/add_location_radius_hint"
            android:textSize="12sp"
            android:textColor="#757575"/>

    </LinearLayout>

    <!-- Контейнер для кнопок внизу -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center">

        <!-- Кнопка Cancel -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/add_location_cancel"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/white"/>

        <!-- Кнопка Add Location -->
        <Button
            android:id="@+id/btn_add_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/add_location_add"
            android:backgroundTint="@color/lavender"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>