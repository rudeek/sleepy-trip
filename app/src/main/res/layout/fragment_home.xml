<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".HomeFragment">

    <!-- Сообщение когда список пуст -->
    <TextView
        android:id="@+id/tv_empty_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="📍 Нет сохранённых локаций\n\nНажмите + чтобы добавить"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:alpha="0.7"
        android:visibility="gone"/>

    <!-- RecyclerView для списка локаций -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_locations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!-- Кнопки режима удаления (как BottomAppBar) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/delete_mode_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <!-- Кнопка отмены -->
            <Button
                android:id="@+id/btn_cancel_delete"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Отмена"
                android:textSize="16sp"
                android:backgroundTint="#757575"
                android:textColor="@color/white"
                app:cornerRadius="12dp"/>

            <!-- Кнопка удаления -->
            <Button
                android:id="@+id/btn_confirm_delete"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Удалить"
                android:textSize="16sp"
                android:backgroundTint="#F44336"
                android:textColor="@color/white"
                app:cornerRadius="12dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>