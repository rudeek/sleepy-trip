<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <!-- Ð ÑƒÑ‡ÐºÐ° -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bottom_sheet_handle"
        android:layout_marginBottom="24dp"/>

    <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
    <TextView
        android:id="@+id/tv_language_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/language_dialog_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- English -->
    <androidx.cardview.widget.CardView
        android:id="@+id/option_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/cardBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/emoji_circle_background"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‡¬ðŸ‡§"
                    android:textSize="32sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/language_english"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"/>

            <ImageView
                android:id="@+id/check_english"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_check_box_checked"
                android:visibility="gone"
                app:tint="@color/lavender"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Russian -->
    <androidx.cardview.widget.CardView
        android:id="@+id/option_russian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/cardBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/emoji_circle_background"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‡·ðŸ‡º"
                    android:textSize="32sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/language_russian"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"/>

            <ImageView
                android:id="@+id/check_russian"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_check_box_checked"
                android:visibility="gone"
                app:tint="@color/lavender"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Romanian -->
    <androidx.cardview.widget.CardView
        android:id="@+id/option_romanian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/cardBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/emoji_circle_background"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‡·ðŸ‡´"
                    android:textSize="32sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/language_romanian"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"/>

            <ImageView
                android:id="@+id/check_romanian"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_check_box_checked"
                android:visibility="gone"
                app:tint="@color/lavender"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>